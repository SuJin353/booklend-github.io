<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/item_rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back"
            android:onClick="onClick"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
        <TextView
            android:id="@+id/tv_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personal_info"
            android:textColor="@color/black"
            android:textSize="20sp"
            style="@style/app_name"
            android:layout_alignTop="@id/ibt_back"
            android:layout_toEndOf="@id/ibt_back"
            android:layout_marginStart="15dp"/>
        <ImageView
            android:id="@+id/iv_profile_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/profile_pic"
            android:layout_alignStart="@id/rl_personal_info"
            android:layout_below="@id/tv_personal_info"
            android:layout_marginTop="18dp"
            android:contentDescription="profile picture"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_profile_avatar"
            android:layout_toEndOf="@id/iv_profile_avatar"
            android:layout_marginStart="5dp"
            android:text="@string/uid"
            android:textColor="@color/teal_700"/>
        <TextView
            android:id="@+id/tv_uid_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_uid"
            android:layout_toEndOf="@id/tv_uid"
            android:layout_marginStart="3dp"
            android:textColor="@color/teal_200"/>
        <RelativeLayout
            android:id="@+id/rl_personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile_avatar"
            android:background="@drawable/border"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/User_name"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_username"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_username"
                android:layout_alignStart="@id/tv_username"
                android:layout_marginTop="30dp"
                android:text="@string/Full_name"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_profile_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_full_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_full_name"
                android:layout_alignStart="@id/tv_username"
                android:layout_marginTop="30dp"
                android:text="@string/credit"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_profile_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_credit"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_credit"
                android:layout_alignStart="@id/tv_username"
                android:layout_marginTop="30dp"
                android:text="@string/email"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_email"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_email"
                android:layout_alignStart="@id/tv_username"
                android:layout_marginTop="30dp"
                android:text="@string/phone_number"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_profile_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_phone_number"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone_number"
                android:layout_alignStart="@id/tv_username"
                android:layout_marginTop="30dp"
                android:text="@string/Password"
                android:textSize="20sp"
                android:textColor="@color/teal_700"/>
            <TextView
                android:id="@+id/tv_profile_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_password"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_change_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/tv_username"
                android:layout_alignEnd="@id/tv_profile_username"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border"
                android:onClick="onClick"
                android:text="@string/change_info"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textAlignment="center"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>