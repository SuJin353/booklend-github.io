<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/item_rl_transaction_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
        <TextView
            android:id="@+id/tv_transaction_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaction_history"
            android:textColor="@color/black"
            android:textSize="20sp"
            style="@style/app_name"
            android:layout_alignTop="@id/ibt_back"
            android:layout_toEndOf="@id/ibt_back"
            android:layout_marginStart="15dp"/>
        <ListView
            android:id="@+id/lv_transaction_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_transaction_history"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
</ScrollView>
