<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/bottom_app_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="41sp"
                style="@style/app_name"
                tools:ignore="TextSizeCheck" />
            <EditText
                android:id="@+id/et_book_name"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_below="@id/tv_app_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:hint="@string/search"
                android:inputType="textLongMessage"
                android:autofillHints="Math" />
            <ImageButton
                android:id="@+id/ibt_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/tv_app_name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/et_book_name"
                android:background="@drawable/ic_search"
                tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <GridView
                android:id="@+id/gv_borrowed_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="2dp"
                android:horizontalSpacing="2dp"
                android:stretchMode="columnWidth"
                android:numColumns="4"
                android:layout_below="@id/et_book_name"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_app_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="50dp"
        tools:ignore="BottomAppBar">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginEnd="19dp"
            app:menu="@menu/bottom_menu"/>
    </com.google.android.material.bottomappbar.BottomAppBar>
</RelativeLayout>