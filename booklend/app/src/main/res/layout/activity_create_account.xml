<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/item_rl_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibt_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/teal_700"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ibt_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="41sp"
            style="@style/app_name"
            tools:ignore="TextSizeCheck" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_app_name"
            android:layout_marginTop="10dp"
            android:contentDescription="profile picture"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/et_username"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/iv_profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/User_name"
            android:inputType="textPersonName"
            android:autofillHints="Alex" />
        <EditText
            android:id="@+id/et_fullname"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/et_username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/Full_name"
            android:inputType="textPersonName"
            android:autofillHints="Alex" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/et_fullname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:autofillHints="Alex@gmail.com" />
        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/et_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:autofillHints="0000000000" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/et_phone_number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:autofillHints="Alex1234!"
            android:hint="@string/Password"
            android:inputType="textPassword"
            tools:ignore="DuplicateSpeakableTextCheck" />
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="360dp"
            android:layout_height="48dp"
            android:layout_below="@id/et_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="@string/Password"
            android:inputType="textPassword"
            android:autofillHints="Alex1234!" />
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/et_email"
            android:layout_alignEnd="@id/et_email"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:background="@drawable/border"
            android:onClick="onClick"
            android:text="@string/create"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>
</ScrollView>