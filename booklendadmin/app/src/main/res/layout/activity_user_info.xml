<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:ignore="ExtraText">
    <ImageButton
        android:id="@+id/ibt_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_back"
        android:onClick="onClick"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
    <TextView
        android:id="@+id/tv_user_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_management"
        android:textColor="@color/black"
        android:textSize="20sp"
        style="@style/app_name"
        android:layout_alignTop="@id/ibt_back"
        android:layout_toEndOf="@id/ibt_back"
        android:layout_marginStart="15dp"/>w
    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_manager"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:padding="13dp">
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_uid"
            android:layout_alignTop="@id/iv_user_avatar"
            android:text="Username:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_username_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_username"
            android:layout_toEndOf="@id/tv_username"
            android:layout_marginStart="3dp"
            android:textColor="@color/teal_700" />
        <TextView
            android:id="@+id/tv_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/iv_user_avatar"
            android:layout_marginStart="5dp"
            android:text="UID:"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_uid_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_uid"
            android:layout_toEndOf="@id/tv_uid"
            android:layout_marginStart="3dp"
            android:textColor="@color/teal_200"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_avatar"
            android:layout_marginTop="5dp"
            android:text="Email:"/>
        <TextView
            android:id="@+id/tv_email_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_email"/>
        <TextView
            android:id="@+id/tv_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:layout_marginTop="5dp"
            android:text="School"/>
        <TextView
            android:id="@+id/tv_school_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_school"/>
        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_school"
            android:layout_marginTop="5dp"
            android:text="Class:"/>
        <TextView
            android:id="@+id/tv_class_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_class"/>
        <TextView
            android:id="@+id/tv_current_borrowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_class"
            android:layout_marginTop="5dp"
            android:text="Current borrowed:"/>
        <TextView
            android:id="@+id/tv_borrowed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_current_borrowed"/>
        <TextView
            android:id="@+id/tv_current_overdue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_current_borrowed"
            android:layout_marginTop="5dp"
            android:text="Current overdue:"/>
        <TextView
            android:id="@+id/tv_overdue_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_current_overdue"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/rl_user_info">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_borrowed_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Current borrowed"
                android:textAlignment="center"
                style="@style/app_name"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />
            <ListView
                android:id="@+id/lv_borrowed_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_overdue_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Current overdue"
                style="@style/app_name"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />
            <ListView
                android:id="@+id/lv_overdue_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
