<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_history_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_book_cover"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/tv_book_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_book_cover"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Id:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_id_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_book_id"
        android:layout_toEndOf="@id/tv_book_id"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/teal_700"/>
    <TextView
        android:id="@+id/tv_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_book_name_info"
        android:layout_alignStart="@id/tv_book_id"
        android:text="Name:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_book_name_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_id_info"
        android:layout_toEndOf="@id/tv_book_name"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/teal_700"/>
</RelativeLayout>